                                'Accept': 'application/json',
                                'X-Requested-With': 'XMLHttpRequest'
                            },
                            credentials: 'include'
                        }).then(response => {
                            if (!response.ok) {
                                console.warn('‚ö†Ô∏è Delete request failed:', response.status);
                            }
                        }).catch(error => {
                            console.error('‚ùå Delete Fetch error:', error);
                        });
                        // Chuy·ªÉn h∆∞·ªõng ngay l·∫≠p t·ª©c v·ªÅ /books
                        window.location.href = '/books';
                    } catch (error) {
                        console.error('‚ùå Error initiating delete:', error);
                        // Chuy·ªÉn h∆∞·ªõng ngay c·∫£ khi c√≥ l·ªói
                        window.location.href = '/books';
                    }
                });
            }

        // Add fadeOut animation
        const style = document.createElement('style');
        style.textContent = `
