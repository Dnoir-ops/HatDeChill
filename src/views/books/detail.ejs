                    e.preventDefault();
                    const form = e.target;
                    const formData = new FormData(form);
                    const content = formData.get('content')?.trim();
                    const rating = formData.get('rating') ? parseInt(formData.get('rating')) : null;
                    const bookId = '<%= book._id || book.ia_id %>';

