          <li>
            <a href="/books?page=<%= currentPage - 1 %>&search=<%= search %>&category=<%= currentCategory !== 'all' ? currentCategory : '' %>" class="page-link-pro">
              <i class="fas fa-chevron-left"></i>
            </a>
