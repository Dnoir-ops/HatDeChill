          <% 
            let range = 6;
            if (currentPage > totalPages - 6) range = Math.max(6, totalPages - currentPage);
            if (currentPage < 7) range = 6;
            const startPage = Math.max(1, currentPage - range);
            const endPage = Math.min(totalPages, currentPage + range);
