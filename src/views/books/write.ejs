    font-family: 'Poppins', sans-serif;
    background: #f0f4f8;
  }

  .write-book-container {
    position: relative;
    min-height: 100vh;
    padding: 2rem 0;
  }

  /* Animated Background */
  .animated-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
