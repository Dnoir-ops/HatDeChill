      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Form Groups */
  .form-group-custom {
    margin-bottom: 2rem;
  }

  .form-label-custom {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 600;
    color: #1f2937;
    font-size: 1rem;
    margin-bottom: 0.75rem;
  }

  .form-label-custom i {
    color: #667eea;
    font-size: 1.1rem;
  }

  .required-star {
    color: #ef4444;
    margin-left: 0.25rem;
  }

  .form-hint {
    display: block;
    margin-top: 0.5rem;
    color: #6b7280;
    font-size: 0.85rem;
  }

  /* Input Wrapper */
  .input-wrapper {
    position: relative;
  }

  .form-control-custom {
    width: 100%;
    padding: 1rem 1.25rem;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    font-size: 1rem;
    font-family: 'Poppins', sans-serif;
    transition: all 0.3s ease;
    background: #f9fafb;
  }

  .form-control-custom:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
  }

  .input-border {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    transition: width 0.3s ease;
  }

  .form-control-custom:focus + .input-border {
    width: 100%;
  }

  /* Category Select */
  .category-select-wrapper {
    position: relative;
  }

  .selected-categories {
    min-height: 50px;
    padding: 0.75rem 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    background: #f9fafb;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: center;
  }

  .selected-categories:hover {
    border-color: #667eea;
    background: white;
  }

  .placeholder-text {
    color: #9ca3af;
    font-size: 0.95rem;
  }

  .category-tag {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.75rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 20px;
    font-size: 0.85rem;
    animation: tagAppear 0.3s ease;
  }

  @keyframes tagAppear {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .category-tag .remove-tag {
    cursor: pointer;
    opacity: 0.8;
    transition: opacity 0.2s;
  }

  .category-tag .remove-tag:hover {
    opacity: 1;
  }

  .category-dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    margin-top: 0.5rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 100;
    max-height: 400px;
    overflow: hidden;
  }

  .category-dropdown.active {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .category-search {
    padding: 1rem;
    border-bottom: 1px solid #e5e7eb;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .category-search i {
    color: #9ca3af;
  }

  .category-search input {
    flex: 1;
    border: none;
    outline: none;
    font-size: 0.95rem;
    font-family: 'Poppins', sans-serif;
  }

  .category-options {
    max-height: 300px;
    overflow-y: auto;
    padding: 0.5rem;
  }

  .category-options::-webkit-scrollbar {
    width: 6px;
  }

  .category-options::-webkit-scrollbar-thumb {
    background: #667eea;
    border-radius: 3px;
  }

  .category-option {
    display: flex;
    align-items: center;
    padding: 0.75rem 1rem;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
  }

  .category-option:hover {
    background: #f3f4f6;
  }

  .category-checkbox {
    display: none;
  }

  .category-label {
    flex: 1;
    color: #374151;
    font-size: 0.95rem;
  }

  .checkmark {
    width: 22px;
    height: 22px;
    border: 2px solid #d1d5db;
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .checkmark i {
    font-size: 12px;
    color: white;
    opacity: 0;
    transform: scale(0);
    transition: all 0.2s ease;
  }

  .category-checkbox:checked ~ .checkmark {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-color: transparent;
  }

  .category-checkbox:checked ~ .checkmark i {
    opacity: 1;
    transform: scale(1);
  }

  /* Textarea */
  .textarea-wrapper {
    position: relative;
  }

  .textarea-custom {
    resize: vertical;
    min-height: 100px;
  }

  .content-textarea {
    min-height: 400px;
    line-height: 1.8;
  }

  .textarea-border {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
    transition: width 0.3s ease;
  }

  .textarea-custom:focus + .textarea-border {
    width: 100%;
  }

  .char-counter,
  .word-counter {
    position: absolute;
    bottom: 0.75rem;
    right: 1rem;
    font-size: 0.8rem;
    color: #9ca3af;
    background: white;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
  }

  .word-counter {
    display: flex;
    gap: 1rem;
  }

  .counter-item {
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .counter-item i {
    color: #667eea;
  }

  /* Action Buttons */
  .action-buttons-group {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .btn-action {
    flex: 1;
    padding: 1.25rem 2rem;
    border: none;
    border-radius: 16px;
    font-size: 1.1rem;
    font-weight: 600;
    font-family: 'Poppins', sans-serif;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    position: relative;
    overflow: hidden;
