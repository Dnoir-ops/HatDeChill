    align-items: center;
    gap: 1.5rem;
    margin-bottom: 2rem;
    animation: slideDown 0.6s ease;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .header-icon {
    width: 80px;
    height: 80px;
    background: white;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36px;
    color: #667eea;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
