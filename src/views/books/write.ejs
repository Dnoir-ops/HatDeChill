    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .btn-action:hover::before {
    width: 400px;
    height: 400px;
  }

  .btn-icon,
  .btn-text {
    position: relative;
    z-index: 1;
  }

  .btn-draft {
    background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
    color: white;
    box-shadow: 0 10px 30px rgba(107, 114, 128, 0.3);
  }

  .btn-publish {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    box-shadow: 0 10px 30px rgba(16, 185, 129, 0.3);
  }

  .btn-action:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
  }

  .btn-action:active {
    transform: translateY(-1px);
  }

  /* Back Link */
  .back-link-wrapper {
    text-align: center;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: #6b7280;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    padding: 0.75rem 1.5rem;
    border-radius: 10px;
  }

  .back-link:hover {
    color: #667eea;
    background: #f3f4f6;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .form-card {
      padding: 2rem 1.5rem;
    }

    .header-title {
      font-size: 2rem;
    }

    .page-header {
      flex-direction: column;
      text-align: center;
    }

    .action-buttons-group {
      flex-direction: column;
    }

    .content-textarea {
      min-height: 300px;
    }
  }
</style>

<script>
  // Category Dropdown Toggle
  const selectedCategories = document.getElementById('selectedCategories');
  const categoryDropdown = document.getElementById('categoryDropdown');
  const categoryCheckboxes = document.querySelectorAll('.category-checkbox');
  const categorySearch = document.getElementById('categorySearch');

  selectedCategories.addEventListener('click', (e) => {
    if (!e.target.classList.contains('remove-tag')) {
      categoryDropdown.classList.toggle('active');
    }
  });

  document.addEventListener('click', (e) => {
    if (!e.target.closest('.category-select-wrapper')) {
      categoryDropdown.classList.remove('active');
    }
  });

  // Update Selected Categories Display
  function updateSelectedCategories() {
    const checkedBoxes = Array.from(categoryCheckboxes).filter(cb => cb.checked);
    
    if (checkedBoxes.length === 0) {
      selectedCategories.innerHTML = '<span class="placeholder-text">Chọn thể loại cho sách của bạn...</span>';
    } else {
      selectedCategories.innerHTML = checkedBoxes.map(cb => `
        <span class="category-tag">
          <span>${cb.value}</span>
          <i class="fas fa-times remove-tag" data-value="${cb.value}"></i>
        </span>
      `).join('');

      // Add remove tag listeners
      document.querySelectorAll('.remove-tag').forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.stopPropagation();
          const value = btn.getAttribute('data-value');
          const checkbox = Array.from(categoryCheckboxes).find(cb => cb.value === value);
          if (checkbox) {
            checkbox.checked = false;
            updateSelectedCategories();
          }
        });
      });
    }
  }

  categoryCheckboxes.forEach(checkbox => {
    checkbox.addEventListener('change', updateSelectedCategories);
  });

  // Category Search
  categorySearch.addEventListener('input', (e) => {
    const searchTerm = e.target.value.toLowerCase();
    const options = document.querySelectorAll('.category-option');
    
    options.forEach(option => {
      const label = option.querySelector('.category-label').textContent.toLowerCase();
      if (label.includes(searchTerm)) {
        option.style.display = 'flex';
      } else {
        option.style.display = 'none';
      }
    });
  });

  // Description Character Counter
  const descriptionTextarea = document.getElementById('description');
  const descCharCount = document.getElementById('descCharCount');

  descriptionTextarea.addEventListener('input', () => {
    const count = descriptionTextarea.value.length;
    descCharCount.textContent = count;
    
    if (count > 500) {
      descCharCount.style.color = '#ef4444';
    } else {
      descCharCount.style.color = '#9ca3af';
    }
  });

  // Content Word and Character Counter
  const contentTextarea = document.getElementById('content');
  const wordCount = document.getElementById('wordCount');
  const charCount = document.getElementById('charCount');

  contentTextarea.addEventListener('input', () => {
    const text = contentTextarea.value.trim();
    const chars = text.length;
    const words = text ? text.split(/\s+/).filter(word => word.length > 0).length : 0;
    
    wordCount.textContent = words;
    charCount.textContent = chars;
  });

  // Form Validation
  const form = document.getElementById('writeBookForm');
  
  form.addEventListener('submit', (e) => {
    const checkedCategories = Array.from(categoryCheckboxes).filter(cb => cb.checked);
    
    if (checkedCategories.length === 0) {
      e.preventDefault();
      alert('Vui lòng chọn ít nhất một thể loại!');
      categoryDropdown.classList.add('active');
      return false;
    }
  });
</script>