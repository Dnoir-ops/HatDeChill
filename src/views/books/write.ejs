<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="write-book-container">
  <!-- Animated Background -->
  <div class="animated-bg">
    <div class="floating-shape shape-1"></div>
    <div class="floating-shape shape-2"></div>
    <div class="floating-shape shape-3"></div>
  </div>

  <div class="container mt-4" style="max-width: 900px;">
    <!-- Header Section -->
    <div class="page-header">
      <div class="header-icon">
        <i class="fas fa-pen-fancy"></i>
      </div>
      <div class="header-text">
        <h1 class="header-title">Viết Sách Mới</h1>
        <p class="header-subtitle">Sáng tạo câu chuyện của riêng bạn</p>
      </div>
    </div>

    <!-- Main Form -->
    <div class="form-card">
      <form method="POST" action="/api/books/write" id="writeBookForm">
        
        <!-- Title Input -->
        <div class="form-group-custom">
          <label for="title" class="form-label-custom">
            <i class="fas fa-book"></i>
            <span>Tên sách</span>
            <span class="required-star">*</span>
          </label>
          <div class="input-wrapper">
            <input 
              type="text" 
              id="title" 
              name="title" 
              class="form-control-custom" 
              placeholder="Nhập tên sách của bạn..."
              required
            >
            <div class="input-border"></div>
          </div>
        </div>

        <!-- Author Input -->
        <div class="form-group-custom">
          <label for="author" class="form-label-custom">
            <i class="fas fa-user-edit"></i>
            <span>Tác giả</span>
            <span class="required-star">*</span>
          </label>
          <div class="input-wrapper">
            <input 
              type="text" 
              id="author" 
              name="author" 
              class="form-control-custom" 
              value="<%= user.name %>" 
              placeholder="Nhập tên tác giả..."
              required
            >
            <div class="input-border"></div>
          </div>
          <small class="form-hint">Mặc định là tên tài khoản của bạn</small>
        </div>

        <!-- Category Select -->
        <div class="form-group-custom">
          <label for="category" class="form-label-custom">
            <i class="fas fa-tags"></i>
            <span>Thể loại</span>
            <span class="required-star">*</span>
          </label>
          <div class="category-select-wrapper">
            <div class="selected-categories" id="selectedCategories">
              <span class="placeholder-text">Chọn thể loại cho sách của bạn...</span>
            </div>
            <div class="category-dropdown" id="categoryDropdown">
              <div class="category-search">
                <i class="fas fa-search"></i>
                <input 
                  type="text" 
                  id="categorySearch" 
                  placeholder="Tìm kiếm thể loại..."
                  autocomplete="off"
                >
              </div>
              <div class="category-options" id="categoryOptions">
                <% categories.forEach(cat => { %>
                  <label class="category-option">
                    <input type="checkbox" name="category" value="<%= cat %>" class="category-checkbox">
                    <span class="category-label"><%= cat %></span>
                    <span class="checkmark"><i class="fas fa-check"></i></span>
                  </label>
                <% }) %>
              </div>
            </div>
          </div>
          <small class="form-hint">Có thể chọn nhiều thể loại</small>
        </div>

        <!-- Description Textarea -->
        <div class="form-group-custom">
          <label for="description" class="form-label-custom">
            <i class="fas fa-align-left"></i>
            <span>Mô tả</span>
          </label>
          <div class="textarea-wrapper">
            <textarea 
              id="description" 
              name="description" 
              class="form-control-custom textarea-custom" 
              rows="3"
              placeholder="Viết mô tả ngắn gọn về sách của bạn..."
            ></textarea>
            <div class="textarea-border"></div>
            <div class="char-counter">
              <span id="descCharCount">0</span> / 500 ký tự
            </div>
          </div>
        </div>

        <!-- Content Textarea -->
        <div class="form-group-custom">
          <label for="content" class="form-label-custom">
            <i class="fas fa-feather-alt"></i>
            <span>Nội dung sách</span>
          </label>
          <div class="textarea-wrapper">
            <textarea 
              id="content" 
              name="content" 
              class="form-control-custom textarea-custom content-textarea" 
              rows="20"
              placeholder="Bắt đầu viết sách của bạn tại đây...&#10;&#10;Hãy để trí tưởng tượng của bạn bay xa..."
            ></textarea>
            <div class="textarea-border"></div>
            <div class="word-counter">
              <div class="counter-item">
                <i class="fas fa-font"></i>
                <span id="wordCount">0</span> từ
              </div>
              <div class="counter-item">
                <i class="fas fa-keyboard"></i>
                <span id="charCount">0</span> ký tự
              </div>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons-group">
          <button type="submit" name="action" value="draft" class="btn-action btn-draft">
            <span class="btn-icon"><i class="fas fa-save"></i></span>
            <span class="btn-text">Lưu bản nháp</span>
            <div class="btn-ripple"></div>
          </button>
          <button type="submit" name="action" value="publish" class="btn-action btn-publish">
            <span class="btn-icon"><i class="fas fa-rocket"></i></span>
            <span class="btn-text">Đăng sách</span>
            <div class="btn-ripple"></div>
          </button>
        </div>

        <!-- Back Link -->
        <div class="back-link-wrapper">
          <a href="/books/my-books" class="back-link">
            <i class="fas fa-arrow-left"></i>
            <span>Quay lại kho Sách</span>
          </a>
        </div>

      </form>
    </div>
  </div>
</div>

<style>
