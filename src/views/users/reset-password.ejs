<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đặt Lại Mật Khẩu</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      .container-wrapper {
        width: 100%;
        padding: 20px;
      }

      .reset-password-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        padding: 50px 40px;
        margin: auto;
        max-width: 450px;
        width: 100%;
        animation: slideUp 0.5s ease-out;
      }

      @keyframes slideUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .icon-wrapper {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 30px;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.4);
      }

      .icon-wrapper svg {
        width: 40px;
        height: 40px;
        stroke: white;
        stroke-width: 2;
        fill: none;
      }

      h2 {
        text-align: center;
        color: #333;
        font-weight: 700;
        margin-bottom: 15px;
        font-size: 28px;
      }

      .subtitle {
        text-align: center;
        color: #999;
        margin-bottom: 35px;
        font-size: 14px;
        line-height: 1.6;
      }

      .form-group {
        margin-bottom: 25px;
        position: relative;
      }

      label {
        display: block;
        margin-bottom: 10px;
        color: #333;
        font-weight: 600;
        font-size: 14px;
      }

      .input-wrapper {
        position: relative;
      }

      .form-control {
        padding: 12px 16px 12px 40px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 14px;
        transition: all 0.3s ease;
        background-color: #f9f9f9;
        width: 100%;
      }

      .form-control:focus {
        background-color: white;
        border-color: #667eea;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        outline: none;
      }

      .form-control::placeholder {
        color: #bbb;
      }

      .input-icon {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
        transition: color 0.3s ease;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .form-control:focus ~ .input-icon,
      .form-control:not(:placeholder-shown) ~ .input-icon {
        color: #667eea;
      }

      .password-strength {
        margin-top: 10px;
        font-size: 12px;
      }

      .strength-bar {
        height: 4px;
        background-color: #e0e0e0;
        border-radius: 2px;
        overflow: hidden;
        margin-bottom: 8px;
      }

      .strength-fill {
        height: 100%;
        width: 0%;
        transition: all 0.3s ease;
        border-radius: 2px;
      }

      .strength-fill.weak {
        width: 33%;
        background-color: #ff6b6b;
      }

      .strength-fill.medium {
        width: 66%;
        background-color: #ffd93d;
      }

      .strength-fill.strong {
        width: 100%;
        background-color: #6bcf7f;
      }

      .strength-text {
        color: #999;
        font-size: 12px;
      }

      .strength-text.weak {
        color: #ff6b6b;
        font-weight: 600;
      }

      .strength-text.medium {
        color: #ffd93d;
        font-weight: 600;
      }

      .strength-text.strong {
        color: #6bcf7f;
        font-weight: 600;
      }

      .toggle-password {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #999;
        transition: color 0.3s ease;
        background: none;
        border: none;
        padding: 0;
        width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .toggle-password:hover {
        color: #667eea;
      }

      .toggle-password svg {
        width: 18px;
        height: 18px;
        stroke: currentColor;
        stroke-width: 2;
        fill: none;
      }

      .btn-submit {
        width: 100%;
        padding: 14px;
        border: none;
        border-radius: 10px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        font-weight: 600;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        margin-top: 10px;
      }

      .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 15px 40px rgba(102, 126, 234, 0.4);
      }

      .btn-submit:active {
        transform: translateY(0);
      }

      .btn-submit:disabled {
        opacity: 0.6;
        cursor: not-allowed;
      }

      .alert {
        border: none;
        border-radius: 10px;
        margin-bottom: 25px;
        padding: 14px 16px;
        font-size: 14px;
        animation: slideDown 0.3s ease-out;
      }

      @keyframes slideDown {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .alert-danger {
        background-color: #fee;
        color: #c33;
        border-left: 4px solid #c33;
      }

      .alert-success {
        background-color: #efe;
        color: #3c3;
        border-left: 4px solid #3c3;
      }

      .password-requirements {
        background-color: #f9f9f9;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 12px;
        margin-top: 15px;
        font-size: 12px;
        color: #666;
      }

      .requirement {
        display: flex;
        align-items: center;
        margin-bottom: 6px;
      }

      .requirement:last-child {
        margin-bottom: 0;
      }

      .requirement-icon {
        width: 16px;
        height: 16px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 8px;
        font-size: 10px;
        color: white;
        flex-shrink: 0;
      }

      .requirement-icon.unchecked {
        background-color: #e0e0e0;
      }

      .requirement-icon.checked {
        background-color: #6bcf7f;
      }

      .requirement.active .requirement-icon {
        background-color: #6bcf7f;
      }

      .back-link {
        text-align: center;
        margin-top: 20px;
      }

      .back-link a {
        color: #667eea;
        text-decoration: none;
        font-size: 14px;
        font-weight: 600;
        transition: color 0.3s ease;
      }

      .back-link a:hover {
        color: #764ba2;
      }

      @media (max-width: 600px) {
        .reset-password-card {
          padding: 40px 25px;
          border-radius: 15px;
        }

        h2 {
          font-size: 24px;
        }

        .icon-wrapper {
          width: 70px;
          height: 70px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container-wrapper">
      <div class="reset-password-card">
        <div class="icon-wrapper">
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path
              d="M12 1a5 5 0 0 0-5 5v4H5a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-9a2 2 0 0 0-2-2h-2V6a5 5 0 0 0-5-5z"
            ></path>
            <circle cx="12" cy="14" r="1"></circle>
          </svg>
        </div>

        <h2>Đặt Lại Mật Khẩu</h2>
        <p class="subtitle">
          Tạo mật khẩu mới an toàn để bảo vệ tài khoản của bạn
        </p>

        <% if (error && error.length) { %>
        <div class="alert alert-danger"><%= error[0] %></div>
        <% } %> <% if (success && success.length) { %>
        <div class="alert alert-success"><%= success[0] %></div>
        <% } %>

        <form method="POST" action="/users/reset-password">
          <div class="form-group">
            <label for="password">Mật Khẩu Mới</label>
            <div class="input-wrapper">
              <svg
                class="input-icon"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
                stroke="currentColor"
                stroke-width="2"
                fill="none"
              >
                <path
                  d="M12 1a5 5 0 0 0-5 5v4H5a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-9a2 2 0 0 0-2-2h-2V6a5 5 0 0 0-5-5z"
                ></path>
              </svg>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="••••••••••"
                required
                onchange="checkPasswordStrength(this.value)"
                oninput="checkPasswordStrength(this.value)"
              />
              <button
                type="button"
                class="toggle-password"
                onclick="togglePasswordVisibility()"
              >
                <svg
                  id="eyeIcon"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg>
              </button>
            </div>

            <div class="password-strength">
              <div class="strength-bar">
                <div id="strengthFill" class="strength-fill"></div>
              </div>
              <div id="strengthText" class="strength-text">
                Nhập mật khẩu để xem độ mạnh
              </div>
            </div>

            <div class="password-requirements">
              <div id="req1" class="requirement">
                <span class="requirement-icon unchecked">✓</span>
                <span>Ít nhất 6 ký tự</span>
              </div>
              <div id="req2" class="requirement">
                <span class="requirement-icon unchecked">✓</span>
                <span>Chữ hoa (A-Z)</span>
              </div>
              <div id="req3" class="requirement">
                <span class="requirement-icon unchecked">✓</span>
                <span>Chữ thường (a-z)</span>
              </div>
              <div id="req4" class="requirement">
                <span class="requirement-icon unchecked">✓</span>
                <span>Số (0-9)</span>
              </div>
              <div id="req5" class="requirement">
                <span class="requirement-icon unchecked">✓</span>
                <span>Ký tự đặc biệt (!@#$%^&*)</span>
              </div>
            </div>
          </div>
          <button type="submit" class="btn-submit">Đặt Lại Mật Khẩu</button>
        </form>

        <div class="back-link">
          <a href="/users/login">← Quay lại đăng nhập</a>
        </div>
      </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
      function togglePasswordVisibility() {
        const input = document.getElementById("password");
        const eyeIcon = document.getElementById("eyeIcon");

        if (input.type === "password") {
          input.type = "text";
          eyeIcon.innerHTML =
            '<path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path><line x1="1" y1="1" x2="23" y2="23"></line>';
        } else {
          input.type = "password";
          eyeIcon.innerHTML =
            '<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle>';
        }
      }

      function checkPasswordStrength(password) {
        const req1 = password.length >= 6;
        const req2 = /[A-Z]/.test(password);
        const req3 = /[a-z]/.test(password);
        const req4 = /[0-9]/.test(password);
        const req5 = /[!@#$%^&*()_+\-=\[\]{};':"\\|,.<>\/?]/.test(password);

        document.getElementById("req1").classList.toggle("active", req1);
        document.getElementById("req2").classList.toggle("active", req2);
        document.getElementById("req3").classList.toggle("active", req3);
        document.getElementById("req4").classList.toggle("active", req4);
        document.getElementById("req5").classList.toggle("active", req5);

        const metRequirements = [req1, req2, req3, req4, req5].filter(
          Boolean
        ).length;
        const strengthFill = document.getElementById("strengthFill");
        const strengthText = document.getElementById("strengthText");

        strengthFill.className = "strength-fill";
        strengthText.className = "strength-text";

        if (password.length === 0) {
          strengthFill.className = "strength-fill";
          strengthText.textContent = "Nhập mật khẩu để xem độ mạnh";
          strengthText.className = "strength-text";
        } else if (metRequirements <= 2) {
          strengthFill.classList.add("weak");
          strengthText.classList.add("weak");
          strengthText.textContent = "Mật khẩu yếu";
        } else if (metRequirements <= 4) {
          strengthFill.classList.add("medium");
          strengthText.classList.add("medium");
          strengthText.textContent = "Mật khẩu vừa";
        } else {
          strengthFill.classList.add("strong");
          strengthText.classList.add("strong");
          strengthText.textContent = "Mật khẩu mạnh";
        }
      }
    </script>
  </body>
</html>
